{
  "name": "ding-app-electron",
  "version": "0.1.0",
  "private": true,
  "description": "Electron + React + TypeScript app (PrimeReact) bridging existing Python PV/WP logic",
  "main": "dist/main/main.js",
  "type": "module",
  "scripts": {
    "dev": "run-p dev:renderer dev:preload dev:main-build dev:start",
    "dev:renderer": "vite --config vite.config.ts",
    "dev:preload": "esbuild src/main/preload.ts --bundle --platform=node --format=cjs --outfile=.vite-electron/preload.cjs --sourcemap --watch",
    "dev:main-build": "tsc -w -p tsconfig.json",
    "dev:start": "cross-env NODE_ENV=development electron .",
    "build": "run-s build:renderer build:main build:preload",
    "build:renderer": "vite build --config vite.config.ts",
    "build:main": "tsc -p tsconfig.json",
    "build:preload": "esbuild src/main/preload.ts --bundle --platform=node --format=cjs --outfile=dist/main/preload.js --sourcemap",
    "start": "electron .",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@electron/remote": "^2.1.2",
    "@types/react-router-dom": "^5.3.3",
    "better-sqlite3": "^9.4.0",
    "chart.js": "^4.4.3",
    "date-fns": "^4.1.0",
    "electron": "^31.2.0",
    "js-yaml": "^4.1.0",
    "primeflex": "^3.3.1",
    "primeicons": "^7.0.0",
    "primereact": "^10.8.4",
    "react": "^18.3.1",
    "react-chartjs-2": "^5.3.0",
    "react-dom": "^18.3.1",
    "react-router-dom": "^7.9.1",
    "zod": "^3.23.8",
    "zustand": "^4.5.4"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.12.12",
    "@types/react": "^18.2.64",
    "@types/react-dom": "^18.2.22",
    "@vitejs/plugin-react": "^4.3.1",
    "cross-env": "^7.0.3",
    "esbuild": "^0.23.1",
    "eslint": "^9.7.0",
    "npm-run-all": "^4.1.5",
    "sass": "^1.77.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4",
    "vite": "^5.4.2",
    "vite-plugin-electron-renderer": "^0.14.5"
  }
}
