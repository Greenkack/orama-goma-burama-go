{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "outDir": "dist",
    "rootDir": "src",
    "paths": {
      "@contracts/*": ["src/shared/contracts/*"],
      "@shared/*": ["src/shared/*"],
      "@renderer/*": ["src/renderer/*"],
      "@main/*": ["src/main/*"],
      "@db/*": ["src/main/db/*"],
      "@bridge/*": ["src/main/bridge/*"]
    },
    "types": ["node", "electron"],
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"]
}
